<Alloy>
	<Require src="header" type="view"></Require>
	
	<View>
		<ScrollView 
			backgroundColor="blue" 
			scrollType="vertical" 
			orientation="vertical" 
			showVerticalScrollIndicator="true">
				<View layout="horizontal">
					<View class="column" left="1%">
						<Widget 
							id="btnStepLog" 
							class="push-down"
							src="com.10000steps.badge"
							platform="ios"
						/>
						
						<ImageView
							height='25%'
							width='auto'
							id="btnStepLog"
							class="push-down"
							style="PLAIN"
							platform="android">
						</ImageView>
						
						<Button
							id="btnChallenges"
							class="push-down"
							platform="ios"
							style="PLAIN">
						</Button>
						
						<ImageView
							height='25%'
							width='auto'
							id="btnChallenges"
							class="push-down"
							style="PLAIN"
							platform="android">
						</ImageView>
						
						<Button
							id="btnSettings"
							class="push-down"
							platform="ios"
							style="PLAIN">
						</Button>
						
						<ImageView
							height='25%'
							width='auto'
							id="btnSettings"
							class="push-down"
							platform="android">
						</ImageView>
					</View>
					
					<View class="column" right="1%">
						<Button
							id="btnStatistics"
							class="push-down"
							platform="ios"
							style="PLAIN">
						</Button>
						
						<ImageView
							height='25%'
							width='auto'
							id="btnStatistics"
							class="push-down"
							platform="android">
						</ImageView>
						
						<Button
							id="btnTournaments"
							class="push-down"
							platform="ios"
							style="PLAIN">
						</Button>
						
						<ImageView
							height='25%'
							width='auto'
							id="btnTournaments"
							class="push-down"
							platform="android">
						</ImageView>

						<Button
							id="btnAbout"
							class="push-down"
							platform="ios"
							style="PLAIN">
						</Button>

						<ImageView
							height='25%'
							width='auto'
							id="btnAbout"
							class="push-down"
							platform="android">
						</ImageView>
					</View>
				</View>
		</ScrollView>

		<View backgroundColor="black" height="10%" bottom="0">
			<Label id="lblWebsiteLink" color="white">www.10000steps.org.au</Label>
		</View>
	</View>
</Alloy>