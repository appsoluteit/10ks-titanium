	<Require src="header" type="view"></Require>
	<ScrollView scrollType="vertical" showVerticalScrollIndicator="true">
		<View layout="vertical">
			<View layout="horizontal">
				<View class="column" left="1%">
					<Button
						id="btnStepLog"
						style="PLAIN"
						image="/common/homepage_button_step-log@2x.png">
					</Button>
					
					<Button
						id="btnChallenges"
						style="PLAIN"
						image="/common/homepage_button_ichallenges@2x.png">
					</Button>
				</View>
				
				<View class="column" right="1%">
					<Button
						id="btnStatistics"
						style="PLAIN"
						image="/common/homepage_button_progress@2x.png">
					</Button>
					
					<Button
						id="btnTournaments"
						style="PLAIN"
						image="/common/homepage_button_friend-challenges@2x.png">
					</Button>
				</View>
			</View>
			
			<Button
				id="btnSettings"
				style="PLAIN"
				left="25%"
				width="49%"
				image="/common/homepage_button_profile-&-settings@2x.png">
			</Button>
		</View>
	</ScrollView>
</Alloy>