<Alloy>
	<Require src="header" type="view"></Require>

	<!-- iOS -->
	<DashboardView editable="false" columnCount="2" platform="ios">
		<DashboardItem 
			badge="1"
			id="btnStepLog"
			image="/common/homepage_button_step-log@2x">
		</DashboardItem>
		
		<DashboardItem
			id="btnChallenges"
			image="/common/homepage_button_ichallenges@2x.png">
		</DashboardItem>
		
		<DashboardItem
			id="btnStatistics"
			image="/common/homepage_button_progress@2x.png">
		</DashboardItem>
		
		<DashboardItem
			id="btnTournaments"
			image="/common/homepage_button_friend-challenges@2x.png">
		</DashboardItem>
		
		<DashboardItem
			id="btnSettings"
			image="/common/homepage_button_profile-&-settings@2x.png">
		</DashboardItem>
	</DashboardView>
	
	<!-- Android -->
	<ScrollView platform="android" scrollType="vertical" showVerticalScrollIndicator="true">
		<View layout="vertical">
			<View layout="horizontal">
				<View class="column" left="1%">
					<Button
						id="btnStepLog"
						style="PLAIN"
						image="/common/homepage_button_step-log@2x.png">
					</Button>
					
					<Button
						id="btnChallenges"
						style="PLAIN"
						image="/common/homepage_button_ichallenges@2x.png">
					</Button>
					
					<Button
						id="btnSettings"
						style="PLAIN"
						image="/common/homepage_button_profile-&-settings@2x.png">
					</Button>
				</View>
				
				<View class="column" right="1%">
					<Button
						id="btnStatistics"
						style="PLAIN"
						image="/common/homepage_button_progress@2x.png">
					</Button>
					
					<Button
						id="btnTournaments"
						style="PLAIN"
						image="/common/homepage_button_friend-challenges@2x.png">
					</Button>
				</View>
			</View>
		</View>
	</ScrollView>
</Alloy>