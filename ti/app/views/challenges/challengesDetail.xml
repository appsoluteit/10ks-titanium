<Alloy>
	<!-- iOS -->
	<NavigationWindow id="challengesDetail" platform="ios">
		<Window id="window" title="" onOpen="window_open">
			<LeftNavButton>
				<Button id="btnBack" onClick="btnBack_click">Back</Button>	
			</LeftNavButton>
			
			<Require id="challengesDetailView" src="challenges/challengesDetailView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="challengesDetail" platform="android" onOpen="window_open">
		<ActionBar 
			title="" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="challengesDetailView" src="challenges/challengesDetailView" type="view"/>
	</Window>
</Alloy>