<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10" height="Ti.UI.FILL">
			<!-- TableView Container -->
			<View top="0dp">
				<TableView>
					<!-- Current Goal Steps -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Goal steps</Label>
							<Label right="10dp" id="lblGoalSteps" class="row-value"></Label>
						</View>
					</TableViewRow>
					
					<!-- Lifetime steps  -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Progress (steps)</Label>
							<Label right="10dp" id="lblProgress" class="row-value"></Label>
						</View>
					</TableViewRow>
					
					<!-- 7 day average -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Total Remaining (steps)</Label>
							<Label right="10dp" id="lblTotalRemaining" class="row-value"></Label>
						</View>
					</TableViewRow>
								
					<!-- Yearly steps  -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Required Steps/Day</Label>
							<Label right="10dp" id="lblRequiredSteps" class="row-value"></Label>
						</View>
					</TableViewRow>
						
					<!-- Avg Steps per day -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Days Remaining</Label>
							<Label right="10dp" id="lblDaysRemaining" class="row-value"></Label>
						</View>
					</TableViewRow>
				</TableView>
			</View>
		
			<!-- Buttons Container -->
			<View width="100%" bottom="20dp">
				<!-- Daily Graph -->
				<Button 
					id="btnDetails" 
					title="Details" 
					left="0dp"
					platform="android"
				/>
					
				<Widget
					id="btnDetails"
					left="0dp"
					src="nl.fokkezb.button"
					title="Details"
					style="steps-default"
					platform="ios"
				/>	
				
				<!-- Monthly Graph -->
				<Button 
					id="btnGraph" 
					title="Graph" 
					right="0dp"
					platform="android"
				/>
					
				<Widget
					id="btnGraph"
					right="0dp"
					src="nl.fokkezb.button"
					title="Graph"
					style="steps-default"
					platform="ios"
				/>	
			</View>
		</View>
	</View>
</Alloy>