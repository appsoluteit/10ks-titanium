<Alloy>
	<ScrollView id="view" layout="vertical" scrollType="vertical">
		<View class="challengeBody">
			<View class="imageContainer">
				<ImageView>
				</ImageView>
			</View>
			
			<View id="labelContainer" class="labelContainer">
				<!-- 
					The task description gets dynamically generated and added to this container, since the html is only
					'settable' during construction
				-->
			</View>
		</View>
		
		<View class="line"></View>
		
		<View class="challengeFooter">
			<Label id="challengeDate"></Label>
			<Label id="startedOn"></Label>	
			<Label id="goalSteps"></Label>			
			<Label id="stepsWalked"></Label>
			<Label id="percentComplete"></Label>
		</View>
		
		<View class="bar">
		</View>
	</ScrollView>
</Alloy>