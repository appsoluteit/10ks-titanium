<Alloy>
	<!-- iOS -->
	<NavigationWindow id="challengeProgress" platform="ios">
		<Window id="window" title="Current Challenge" onOpen="window_open">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>	
			</LeftNavButton>
			
			<Require id="challengeProgressView" src="challenges/challengeProgressView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="challengeProgress" platform="android" onOpen="window_open">
		<ActionBar 
			title="Current Challenge" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="challengeProgressView" src="challenges/challengeProgressView" type="view"/>
	</Window>
</Alloy>