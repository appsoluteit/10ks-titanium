<Alloy>
	<!-- iOS -->
	<NavigationWindow id="challenges" platform="ios">
		<Window id="window" title="Challenges" onOpen="window_open">
			<Require id="challengesView" src="challenges/challengesView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="challenges" platform="android" onOpen="window_open">
		<ActionBar 
			title="Challenges" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="challengesView" src="challenges/challengesView" type="view"/>
	</Window>
</Alloy>