<Alloy>
	<View class="background-gradient" height="100%" top="0" layout="vertical">
		<View class="margin-10" height="Ti.UI.FILL" layout="vertical">
			<ScrollView id="view" layout="vertical" scrollType="vertical" class="inner-content" height="90%">				
				<View id="labelContainer" class="labelContainer margin-10" top="10dp" height="Ti.UI.SIZE">
					<!-- 
						The task description gets dynamically generated and added to this container, since the html is only
						'settable' during construction
					-->
				</View>

				<!-- Button -->
				<View top="10dp" bottom="10dp" height="Ti.UI.SIZE">
					<Button 
						id="btnJoin" 
						title="Join Challenge" 
						font="{ fontSize: 10sp }"
						platform="android"
					/>
						
					<Widget
						id="btnJoin"
						src="nl.fokkezb.button"
						title="Join Challenge"
						style="steps-default"
						platform="ios"
					/>
				</View>
			</ScrollView>
		</View>
	</View>
</Alloy>