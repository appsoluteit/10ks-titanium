<Alloy>
	<!-- iOS -->
	<NavigationWindow id="dailyGraph" platform="ios">
		<Window id="dailyGraphWindow" title="Daily Graph" onOpen="window_open" orientation="Ti.UI.LANDSCAPE_LEFT" orientationModes="[Ti.UI.LANDSCAPE_LEFT]">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>	
			</LeftNavButton>
			
			<Require id="dailyGraphView" src="stats/dailyGraphView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="dailyGraph" platform="android" onOpen="window_open">
		<ActionBar 
			title="Daily Graph" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="dailyGraphView" src="stats/dailyGraphView" type="view"/>
	</Window>
</Alloy>