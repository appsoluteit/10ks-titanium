<Alloy>
	<!-- iOS -->
	<NavigationWindow id="stats" platform="ios">
		<Window title="Statistics" onOpen="window_open" id="window">
			<!-- Nav buttons set programatically on window open -->
			
			<Require id="statsView" src="stats/statsView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="stats" platform="android" onOpen="window_open">
		<ActionBar 
			title="Statistics" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="statsView" src="stats/statsView" type="view"/>
	</Window>
</Alloy>