<Alloy>
	<!-- iOS -->
	<NavigationWindow id="stats" platform="ios">
		<Window title="Statistics" onOpen="window_open">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>	
			</LeftNavButton>
			
			<RightNavButton>
				<Button
					id="btnRefresh"
					image="/common/icons/refresh-button.png"
					onClick="btnRefresh_click">
				</Button>
			</RightNavButton>
			
			<Require id="statsView" src="stats/statsView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="stats" platform="android" onOpen="window_open">
		<ActionBar 
			title="Statistics" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="statsView" src="stats/statsView" type="view"/>
	</Window>
</Alloy>