<Alloy>
	<!-- iOS -->
	<NavigationWindow id="monthlyGraph" platform="ios">
		<Window id="monthlyGraphWindow" title="Monthly Graph" onOpen="window_open" onPostlayout="window_postlayout">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>	
			</LeftNavButton>
			
			<Require id="monthlyGraphView" src="stats/monthlyGraphView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="monthlyGraph" platform="android" onOpen="window_open" onPostlayout="window_postlayout">
		<ActionBar 
			title="Statistics" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="monthlyGraphView" src="stats/monthlyGraphView" type="view"/>
	</Window>
</Alloy>