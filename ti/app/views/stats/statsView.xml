<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10 inner-content" bottom="10dp" layout="vertical">
			<!-- TableView Container -->
			<View top="0dp" height="80%">
				<TableView>
					<!-- Current Goal Steps -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Current goal steps:</Label>
							<Label right="10dp" id="lblGoalSteps" class="row-value"></Label>
						</View>
					</TableViewRow>
					
					<!-- Lifetime steps  -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Lifetime steps:</Label>
							<Label right="10dp" id="lblLifeTimeSteps" class="row-value"></Label>
						</View>
					</TableViewRow>
					
					<!-- 7 day average -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">7 day average:</Label>
							<Label right="10dp" id="lblSevenDayAverage" class="row-value"></Label>
						</View>
					</TableViewRow>
								
					<!-- Yearly steps  -->
					<TableViewRow>
						<View class="whole">
							<Label id="lblYearlyStepsTitle" class="row-label"></Label>
							<Label right="10dp" id="lblYearlySteps" class="row-value"></Label>
						</View>
					</TableViewRow>
						
					<!-- Avg Steps per day -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Overall daily average:</Label>
							<Label right="10dp" id="lblAvgSteps" class="row-value"></Label>
						</View>
					</TableViewRow>
							
					<!-- Busiest Month -->
					<TableViewRow>
						<View class="whole">
							<Label id="lblBusiestMonthLabel" class="row-label">Busiest Month</Label>
							
							<View layout="vertical">
								<Label id="lblBusiestMonth" class="row-value" right="10dp"></Label>
								<Label id="lblBusiestMonthSteps" class="row-value" right="10dp"></Label>
							</View>
						</View>
					</TableViewRow>
					
					<!-- Busiest Day -->
					<TableViewRow>
						<View class="whole">
							<Label id="lblBusiestDayLabel" class="row-label">Busiest Day</Label>
							
							<View layout="vertical">
								<Label id="lblBusiestDay" class="row-value" right="10dp"></Label>
								<Label id="lblBusiestDaySteps" class="row-value" right="10dp"></Label>
							</View>
						</View>
					</TableViewRow>
				</TableView>
			</View>
		
			<!-- Buttons Container -->
			<View left="10dp" right="10dp" bottom="20dp">
				<!-- Daily Graph -->
				<Button 
					id="btnDailyGraph" 
					title="Daily Graph" 
					left="0dp"
					font="{ fontSize: 10sp }"
					platform="android"
				/>
					
				<Widget
					id="btnDailyGraph"
					left="0dp"
					src="nl.fokkezb.button"
					title="Daily Graph"
					style="steps-default"
					platform="ios"
				/>	
				
				<!-- Monthly Graph -->
				<Button 
					id="btnMonthlyGraph" 
					title="Monthly Graph" 
					right="0dp"
					font="{ fontSize: 10sp }"					
					platform="android"
				/>
					
				<Widget
					id="btnMonthlyGraph"
					right="0dp"
					src="nl.fokkezb.button"
					title="Monthly Graph"
					style="steps-default"
					platform="ios"
				/>	
			</View>
		</View>
	</View>
</Alloy>