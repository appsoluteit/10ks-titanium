<Alloy>
	<!-- iOS -->
	<NavigationWindow platform="ios" id="log">
		<Window title="Step Log" id="window" onOpen="window_open">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>
			</LeftNavButton>
			
			<RightNavButton>
				<Button id="btnSync" onClick="btnSync_click">Sync</Button>
			</RightNavButton>
			
			<TableView id = "tblDays"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window platform="android" id="log" title="Step Log" onOpen="window_open" fullscreen="true">
		<ActionBar 
			title="Step Log" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click">	
		</ActionBar>
		
        <!-- The Menu tag adds the Android menu. -->
        <Menu id="menu" platform="android">
            <MenuItem 
            	id="menuItem" 
            	title="Item 1" 
            	icon="/common/icons/refresh-button.png" 
            	onClick="btnSync_click" 
            	showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM" 
            />
        </Menu>
			
		<TableView id = "tblDays" />
	</Window>
</Alloy>