<Alloy>
	<View layout="vertical" left="0" top="0">
		<View layout="horizontal" class="margin-10 whole" textAlign="right">
				<Label 
					class="bold big-label" 
					width="40%" 
					right="10dp" 
					textAlign="right">
						Steps Walked
				</Label>
				
				<TextField 
					id="txtStepsWalked" 
					width="40%"
					keyboardType="Ti.UI.KEYBOARD_TYPE_NUMBER_PAD" 
					maxLength="5">
				</TextField>
		</View>
		
		<View class="whole margin-10">
			<Label 
				left="0" 
				class="bold big-label" 
				width="40%" 
				textAlign="right">
					Extra Activities
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				class="big-label" 
				width="33%" 
				right="10dp" 
				textAlign="right">
					Moderate
			</Label>
			
			<TextField 
				id="txtModerateMins"
				width="40%"
				keyboardType="Ti.UI.KEYBOARD_TYPE_NUMBER_PAD"
				maxLength="5">
			</TextField>
			
			<Label 
				class="italic big-label" 
				left="10dp">
					mins
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				class="big-label" 
				width="33%" 
				right="10dp" 
				textAlign="right">
					Vigorous
			</Label>
			
			<TextField
				id="txtVigorousMins"
				width="40%"
				keyboardType="Ti.UI.KEYBOARD_TYPE_NUMBER_PAD"
				maxLength="5">
			</TextField>
			
			<Label 
				class="italic big-label" 
				left="10dp">
					mins
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				class="bold big-label" 
				width="40%" 
				right="10dp" 
				textAlign="right">
					Daily Total
			</Label>
			
			<Label 
				id="lblDailyTotal" 
				color="red" 
				class="big-label">
					0
			</Label>
		</View>
	</View>
</Alloy>