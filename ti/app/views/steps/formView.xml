<Alloy>
	<View layout="vertical" left="0" top="0">
		<View layout="horizontal" class="margin-10 whole" textAlign="right">
				<Label 
					class="bold" 
					width="33%" 
					right="10dp" 
					textAlign="left">
						Steps Walked
				</Label>
				
				<TextField 
					id="txtStepsWalked"
					keyboardType="Titanium.UI.KEYBOARD_TYPE_NUMBER_PAD"
					maxLength="5">
				</TextField>
		</View>
		
		<View class="whole margin-10">
			<Label 
				left="0" 
				top="10dp"
				class="bold" 
				textAlign="left">
					Extra Activities
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				width="33%" 
				right="10dp" 
				textAlign="left">
					Moderate
			</Label>
			
			<TextField 
				id="txtModerateMins"
				keyboardType="Titanium.UI.KEYBOARD_TYPE_NUMBER_PAD" 
				maxLength="5">
			</TextField>
			
			<Label 
				left="10dp">
					mins
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				width="33%" 
				right="10dp" 
				textAlign="left">
					Vigorous
			</Label>
			
			<TextField
				id="txtVigorousMins"
				keyboardType="Titanium.UI.KEYBOARD_TYPE_NUMBER_PAD"
				maxLength="5">
			</TextField>
			
			<Label 
				left="10dp">
					mins
			</Label>
		</View>
		
		<View layout="horizontal" class="margin-10 whole">
			<Label 
				class="bold" 
				width="33%" 
				right="10dp" 
				top="10dp"
				textAlign="left">
					Daily Total
			</Label>
			
			<Label 
				id="lblDailyTotal" 
				color="red" 
				top="10dp">
					0
			</Label>
		</View>
	</View>
</Alloy>