<Alloy>
	<!-- iOS -->
	<NavigationWindow id="settings" platform="ios">
		<Window title="Settings" onOpen="window_open" id="window">			
			<Require id="settingsView" src="settings/settingsView" type="view"/>
			<Widget id="badge" arg="test" src="com.10000steps.badge"></Widget>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="settings" platform="android" onOpen="window_open">
		<ActionBar 
			title="Settings" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="settingsView" src="settings/settingsView" type="view"/>
	</Window>
</Alloy>