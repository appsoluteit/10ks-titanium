<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10 inner-content" layout="vertical" height="Ti.UI.SIZE">
			<!-- TableView Container -->
			<View top="0dp" height="Ti.UI.SIZE">
				<TableView id="tblContainer" class="margin-10" height="Ti.UI.SIZE">		
					<!-- Goal Steps -->
					<TableViewRow id="tblRowGoalSteps">
						<View layout="horizontal">
							<View width="48%">
								<Label class="row-label">Goal Steps</Label>
							</View>
							
							<View width="48%">
								<Label right="10dp" id="lblGoalSteps" class="row-value"></Label>
							</View>
						</View>
					</TableViewRow>
					
					<!-- Integrations -->
					<TableViewRow id="tblRowIntegrations">
						<Label class="row-label">Integrations</Label>
					</TableViewRow>

					<!-- Logout -->
					<TableViewRow id="tblRowLogout">
						<Label class="row-label">Logout</Label>
					</TableViewRow>
				</TableView>
			</View>
		</View>
	</View>
</Alloy>