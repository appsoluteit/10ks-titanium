<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10 inner-content" layout="vertical" bottom="10dp">
        	<!-- TableView Container -->
			<View top="0dp" height="Ti.UI.SIZE">
				<TableView id="tblContainer" class="margin-10" height="Ti.UI.SIZE">					
					<TableViewRow id="tblRowEnableHealthKit">
						<View layout="horizontal">
							<View width="48%" layout="vertical">
                                <View layout="horizontal" height="Ti.UI.SIZE">
                                    <Label class="row-label">Enable HealthKit</Label>
                                    <Button
                                        id="btnHealthKitHelp"
                                        image="/common/icons/question-mark.png">
                                    </Button>
                                </View>
							</View>
							
							<View width="48%" layout="vertical">
                                <Switch id="swHealthKitEnabled" value="false" right="10dp" />
							</View>
						</View>
					</TableViewRow>

                    <TableViewRow>
						<View layout="horizontal">
							<View width="38%">
								<Label class="row-label">Last sync date</Label>
							</View>
							
							<View width="58%">
                                <Label id="lblLastImportDate" class="row-value"></Label>
							</View>
						</View>                        
                    </TableViewRow>
				</TableView>
			</View>
		</View>
	</View>
</Alloy>