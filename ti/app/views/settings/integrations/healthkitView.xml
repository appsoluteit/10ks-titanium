<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10 inner-content" layout="vertical" bottom="10dp">
        	<!-- TableView Container -->
			<View top="0dp" height="Ti.UI.SIZE">
				<TableView id="tblContainer" class="margin-10" height="Ti.UI.SIZE">					
					<TableViewRow id="tblRowEnableHealthKit">
						<View layout="horizontal">
							<View width="68%" layout="vertical">
                                <View layout="horizontal" height="Ti.UI.SIZE">
                                    <Label class="row-label">Enable HealthKit</Label>
                                    <Button
                                        id="btnHealthKitHelp"
                                        image="/common/icons/question-mark.png">
                                    </Button>
                                </View>
							</View>
							
							<View width="28%" layout="vertical">
                                <Switch id="swHealthKitEnabled" value="false" right="10dp" />
							</View>
						</View>
					</TableViewRow>

                    <TableViewRow>
						<View layout="horizontal">
							<View width="38%">
								<Label class="row-label">Last imported</Label>
							</View>
							
							<View width="58%">
                                <Label id="lblLastImportDate" class="row-value"></Label>
							</View>
						</View>                        
                    </TableViewRow>
									<TableViewRow>
						<View layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.FILL" id="vwImportStepsFrom">
							<Label class="row-label">Import steps from</Label>
							<Button
								id="btnImportFromHelp"
								image="/common/icons/question-mark.png">
							</Button>
						</View>
					</TableViewRow>
				</TableView>
			</View>
					<View id="vwFirstImportPicker" visible="false" height="Ti.UI.FILL" layout="vertical">
				<Picker 
					id="pkFirstImportPicker"
					type="Ti.UI.PICKER_TYPE_DATE"
					minDate="2020,1,1">
				</Picker>
			</View>
		</View>
	</View>
</Alloy>