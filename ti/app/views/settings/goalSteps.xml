<Alloy>
	<!-- iOS -->
	<NavigationWindow id="goalSteps" platform="ios">
		<Window title="Goal Steps" onOpen="window_open">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>	
			</LeftNavButton>
			
			<Require id="goalStepsView" src="settings/goalStepsView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="goalSteps" platform="android" onOpen="window_open">
		<ActionBar 
			title="Goal Steps" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="goalStepsView" src="settings/goalStepsView" type="view"/>
	</Window>
</Alloy>