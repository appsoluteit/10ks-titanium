<Alloy>
	<!-- iOS -->
	<NavigationWindow id="timeouts" platform="ios">
        <!-- TODO: Window title to be dynamic -->
		<Window title="Timeouts" onOpen="window_open" id="window">
		    <LeftNavButton>
				<View width="Ti.UI.SIZE" height="30">
                	<Button image="/common/chevrons/left-16-w.png" title="Back" onClick="btnBack_click" style="Ti.UI.iOS.SystemButtonStyle.PLAIN"/>
				</View>
            </LeftNavButton>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window title="10,000 Steps" platform="android" onOpen="window_open">
        <ActionBar 
        	id="actionbar" 
        	title="Timeouts" 
        	homeButtonEnabled="true"
        	displayHomeAsUp="true"
        	onHomeIconItemSelected="btnBack_click" />
    </Window>
</Alloy>