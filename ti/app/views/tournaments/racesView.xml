<Alloy>
	<View class="background-gradient" height="100%">
		<View class="margin-10 inner-content" bottom="10dp" layout="vertical">
			<!-- TableView Container -->
			<View top="0dp" height="50%">
				<TableView height="100%" id="tblRaces">
					<!-- Goal -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Goal</Label>
							<Label right="10dp" id="lblGoal" class="row-value"></Label>
						</View>
					</TableViewRow>

					<!-- Distance -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Distance</Label>
							<Label right="10dp" id="lblDistance" class="row-value"></Label>
						</View>
					</TableViewRow>               

					<!-- Start Date -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Start Date</Label>
							<Label right="10dp" id="lblStartDate" class="row-value"></Label>
						</View>
					</TableViewRow>

					<!-- Team Total Steps -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">Team Total Steps</Label>
							<Label right="10dp" id="lblTeamTotalSteps" class="row-value"></Label>
						</View>
					</TableViewRow>

					<!-- Percent Complete -->
					<TableViewRow>
						<View class="whole">
							<Label class="row-label">% Complete</Label>
							<Label right="10dp" id="lblPercentComplete" class="row-value"></Label>
						</View>
					</TableViewRow>
				</TableView>
			</View>

			<Widget id="vbar1" src="com.mcvendrell.valuebar" title="" />

            <!-- Buttons Container -->
			<View left="10dp" right="10dp" bottom="20dp">
				<!-- Daily Graph -->
				<Button 
					id="btnTeamLeaderboard" 
					title="Team Leaderboard" 
					left="0dp"
					font="{ fontSize: 10sp }"
					platform="android"
				/>
					
				<Widget
					id="btnTeamLeaderboard"
					left="0dp"
					src="nl.fokkezb.button"
					title="Team Leaderboard"
					style="steps-default"
					platform="ios"
                    textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"
				/>	
				
				<!-- Monthly Graph -->
				<Button 
					id="btnTeamMembers" 
					title="Team Members" 
					right="0dp"
					font="{ fontSize: 10sp }"					
					platform="android"
				/>
					
				<Widget
					id="btnTeamMembers"
					right="0dp"
					src="nl.fokkezb.button"
					title="Team     Members"
					style="steps-default"
					platform="ios"
                    textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"
				/>	
			</View>
		</View>
	</View>
</Alloy>