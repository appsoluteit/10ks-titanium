<Alloy>
	<!-- iOS -->
	<NavigationWindow id="races" platform="ios">
		<Window title="Races" onOpen="window_open" id="window">
		    <LeftNavButton>
				<View width="Ti.UI.SIZE" height="30">
                	<Button 
						image="/common/chevrons/left-16-w.png" 
						onClick="btnBack_click" 
						style="Ti.UI.iOS.SystemButtonStyle.PLAIN"/>
				</View>
            </LeftNavButton>

			<Require id="racesView" src="tournaments/racesView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="races" title="10,000 Steps" platform="android" onOpen="window_open">
        <ActionBar 
        	id="actionbar" 
        	homeButtonEnabled="true"
        	displayHomeAsUp="true"
        	onHomeIconItemSelected="btnBack_click" />

		<Require id="racesView" src="tournaments/racesView" type="view"/>
    </Window>
</Alloy>