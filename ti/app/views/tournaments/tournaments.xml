<Alloy>
	<!-- iOS -->
	<NavigationWindow id="tournaments" platform="ios">
		<Window title="Tournaments" onOpen="window_open">
			<LeftNavButton>
				<Button 
					id="btnBack" 
					image="/common/chevrons/left-16.png"
					onClick="btnBack_click">
				</Button>
			</LeftNavButton>
			
			<Require id="tournamentsView" src="tournaments/tournamentsView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="tournaments" platform="android" onOpen="window_open">
		<ActionBar 
			title="Tournaments" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="tournamentsView" src="tournaments/tournamentsView" type="view"/>
	</Window>
</Alloy>