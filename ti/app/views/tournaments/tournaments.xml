<Alloy>
	<!-- iOS -->
	<NavigationWindow id="tournaments" platform="ios">
		<Window title="Tournaments" onOpen="window_open" id="window">
		    <LeftNavButton id="btnLeftNavButton">
				<View width="Ti.UI.SIZE" height="30">
                	<Button 
						id="btnBack"
						image="/common/chevrons/left-16-w.png" 
						title="Back" 
						onClick="btnBack_click" 
						style="Ti.UI.iOS.SystemButtonStyle.PLAIN"/>
				</View>
            </LeftNavButton>
            
            <RightNavButton>
                <Button image="/common/icons/refresh-button-16.png" onClick="btnRefresh_click" />
            </RightNavButton>     
                
			<Require id="tournamentsView" src="tournaments/tournamentsView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window title="10,000 Steps" platform="android" onOpen="window_open">
        <ActionBar 
        	id="actionbar" 
        	title="Tournaments" 
        	homeButtonEnabled="true"
        	displayHomeAsUp="true"
        	onHomeIconItemSelected="btnBack_click" />
        	
        <Menu>
            <MenuItem 
            	id="item1" 
            	title="Refresh" 
            	showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"
            	icon="/common/icons/refresh-button-32.png" 
            	onClick="btnRefresh_click" />
        </Menu>
        
		<Require id="tournamentsView" src="tournaments/tournamentsView" type="view"/>
    </Window>
</Alloy>