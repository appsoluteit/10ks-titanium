<Alloy>
	<!-- iOS -->
	<NavigationWindow id="races" platform="ios">
		<Window title="Race Tournaments" onOpen="window_open">
			<LeftNavButton>
				<Button id="btnBack" onClick="btnBack_click">Back</Button>
			</LeftNavButton>
			
			<Require id="racesView" src="tournaments/races/racesView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window id="races" platform="android" onOpen="window_open">
		<ActionBar 
			title="Race Tournaments" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="btnBack_click"></ActionBar>
			
		<Require id="racesView" src="tournaments/races/racesView" type="view"/>
	</Window>
</Alloy>