<Alloy>
	<Require src="header" type="view"></Require>
	
	<ScrollView scrollType="vertical" layout="vertical">
		<View layout="vertical" class="margin-10">
			<Label class="big-label">Username</Label>
			<TextField 
				id="txtUsername" 
				class="three-quarters"
				autocorrect="false" 
				autocapitalization="false" 
				keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL">
			</TextField>	
			
			<Label class="big-label">Email</Label>		
			<TextField
				id="txtEmail"
				class="three-quarters"
				autocorrect="false"
				autocapitalization="false"
				keyboardType="TYPE_EMAIL">
			</TextField>
			
			<Label class="big-label">Password</Label>
			<TextField 
				id="txtPassword" 
				class="three-quarters"
				passwordMask="true">
			</TextField>
					
			<Label class="big-label">Retype Password</Label>
			<TextField 
				id="txtPassword2" 
				class="three-quarters"
				passwordMask="true">
			</TextField>
		</View>
			
		<Label 
			id="lblError" 
			top="10dp" 
			textAlign="center" 
			class="whole error big-label">
		</Label>
		
		<View class="margin-10" layout="vertical">
			<Button 
				id="btnRegister" 
				title="Register" 
				class="half big-label">
					Register
			</Button>
			
			<Button 
				id="btnLogin" 
				title="Login" 
				class="half secondary big-label">
					Login
			</Button>
		</View>
	</ScrollView>
</Alloy>