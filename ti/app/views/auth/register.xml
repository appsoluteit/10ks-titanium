<Alloy>
	<!-- iOS -->
	<NavigationWindow platform="ios" id="register">
		<Window id="window" title="Register" onOpen="window_open" platform="ios">
			<!-- Back nav button set programatically -->
			<Require id="registerView" src="auth/registerWebView" type="view"/>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window platform="android" title="Register" id="register" onOpen="window_open" fullscreen="true">
		<ActionBar 
			title="Register" 
			displayHomeAsUp="true" 
			homeButtonEnabled="true" 
			onHomeIconItemSelected="lblLogin_click">	
		</ActionBar>
		
		<Require id="registerView" src="auth/registerWebView" type="view"/>
	</Window>
</Alloy>