<Alloy>
	<Require src="header" type="view"></Require>
	
	<View layout="vertical" class="margin-10">
		<Label>Username</Label>
		<TextField 
			id="txtUsername" 
			class="half"
			autocorrect="false" 
			autocapitalization="false" 
			keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL">
		</TextField>			
		
		<Label>Password</Label>
		<TextField 
			id="txtPassword" 
			class="half"
			passwordMask="true">
		</TextField>
	</View>
	
	<Label id="lblError" top="10dp" textAlign="center" class="whole error"></Label>
	
	<View class="margin-10" layout="vertical">
		<Button id="btnRegister" title="Register" class="half"></Button>
		<Button id="btnLogin" title="Login" class="half secondary"></Button>
	</View>
</Alloy>