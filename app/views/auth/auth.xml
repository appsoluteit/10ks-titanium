<Alloy>
	<Require src="header" type="view"></Require>
	<View layout="vertical">
		<Label>Username</Label>
		<TextField 
			id="txtUsername" 
			class="half"
			autocorrect="false" 
			autocapitalization="false" 
			keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL">
		</TextField>			
		
		<Label>Password</Label>
		<TextField 
			id="txtPassword" 
			class="half"
			passwordMask="true">
		</TextField>
	</View>
</Alloy>