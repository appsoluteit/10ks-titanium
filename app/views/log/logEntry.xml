<Alloy>
	<!-- iOS -->
	<NavigationWindow platform="ios" id="logEntry">
		<Window title="" id="window" onOpen="window_open" layout="vertical">
			<LeftNavButton>
				<Button id="btnDone" onClick="btnDone_click">Done</Button>
			</LeftNavButton>
			
			<Widget id="logDetails" src="logDetails"></Widget>
		</Window>
	</NavigationWindow>
	
	<!-- Android -->
	<Window platform="android" id="logEntry" onOpen="window_open">
		<ActionBar 
			title="" 
			homeButtonEnabled="true" 
			displayHomeAsUp="true" 
			onHomeIconItemSelected="btnDone_click"></ActionBar>

		<Widget id="logDetails" src="logDetails"></Widget>
	</Window>
</Alloy>