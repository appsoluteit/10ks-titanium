<Alloy>
	<Window>
		<View id="header" height="Ti.UI.SIZE" layout="vertical">
			<ImageView 
				top="0px"
				height="90dp"
				width="Ti.UI.FILL"
				image="/common/homepage_logo_background@2x.png">
			</ImageView>
			
			<ImageView
				top="-60dp"
				height="120dp"
				width="auto"
				image="/common/homepage_logo@2x.png">
			</ImageView>
		</View>
		
		<View class="container">
			<!-- TODO: These are a little small on Android. Review -->
			
				<Button
					id="btnStepLog"
					style="PLAIN"
					width="50%"
					onClick="btnStepLog_click"
					image="/common/homepage_button_step-log@2x.png">
				</Button>
				
				<Button
					id="btnStatistics"
					style="PLAIN"
					width="50%"
					onClick="btnStatistics_click"
					image="/common/homepage_button_progress@2x.png">
				</Button>
			
				<Button
					id="btnChallenges"
					style="PLAIN"
					width="50%"
					onClick="btnChallenges_click"
					image="/common/homepage_button_ichallenges@2x.png">
				</Button>
				
				<Button
					id="btnTournaments"
					style="PLAIN"
					width="50%"
					onClick="btnTournaments_click"
					image="/common/homepage_button_friend-challenges@2x.png">
				</Button>
			
				<Button
					id="btnSettings"
					style="PLAIN"
					left="25%"
					width="50%"
					onClick="btnSettings_click"
					image="/common/homepage_button_profile-&-settings@2x.png">
				</Button>
		</View>
	</Window>
</Alloy>