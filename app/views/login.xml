<Alloy>
	<Window>
		<View id="header" height="Ti.UI.SIZE" layout="vertical">
			<ImageView 
				top="0px"
				height="90dp"
				width="Ti.UI.FILL"
				image="/common/homepage_logo_background@2x.png">
			</ImageView>
			
			<ImageView
				top="-60dp"
				height="120dp"
				width="auto"
				image="/common/homepage_logo@2x.png">
			</ImageView>
		</View>
		
		<View>
			<Label>Username</Label>
			<TextField 
				id="txtUsername" 
				class="half"
				autocorrect="false" 
				autocapitalization="false" 
				softKeyboardOnFocus="true"
				keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL">
			</TextField>
			
			<Label>Password</Label>
			<TextField 
				id="txtPassword" 
				class="half"
				softKeyboardOnFocus="true"
				passwordMask="true">
			</TextField>
			
			<Label id="lblError" class="error"></Label>
			<Button id="btnLogin" title="Login" onClick="btnLogin_click"></Button>
		</View>
	</Window>
</Alloy>