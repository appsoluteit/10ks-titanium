<Alloy>
	<Window id="login">
		<Require src="header" type="view"></Require>
		<View>
			<Label>Username</Label>
			<TextField 
				id="txtUsername" 
				class="half"
				autocorrect="false" 
				autocapitalization="false" 
				keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL">
			</TextField>			
			
			<Label>Password</Label>
			<TextField 
				id="txtPassword" 
				class="half"
				passwordMask="true">
			</TextField>
			
			<Label id="lblError" class="error"></Label>
			<Button id="btnLogin" title="Login" onClick="btnLogin_click"></Button>
		</View>
	</Window>
</Alloy>